{% extends 'base.html.twig' %}

{% block title %}Votre Profile !{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/style.css')}}">

{% endblock %}



{% use "bootstrap_5_layout.html.twig" %}

{# {% if error %}
	<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %} #}

{% block body %}


{% if app.user and app.user.isVerified == false %}

<div class="container justify-content-center" id="mentions" >
    <div class='row mt-5'>
<h1>Heureux de vous Revoir  {{app.user.firstname}} !</h1>
<h2 class="mt-2">
    You are logged in as </h2>
    {{ app.user.userIdentifier }},
</div>
</div>
{% endif %}


<div class="container" >
    <div class='row mt-5'>
        <div class='col-sm-8 offset-sm-2'>
        <h1 class='justify-content-center d-flex'>Informations d'utilisateur</h1>
<table class ='table table-light table-hover mt-4'>
<thead>
    <tr>
        <th>Nom</th>
        <th>Prénom</th>
        <th>Email</th>
        <th>Adresse</th>
        <th>Code Postal</th>
        <th>Ville</th>
    </tr>
</thead>
{% if app.user %}
<tbody>
    <tr>
        <td>{{ app.user.lastname }}</td>
        <td>{{ app.user.firstname }}</td>
        <td>{{ app.user.email }}</td>
        <td>{{ app.user.address }}</td>
        <td>{{ app.user.zipcode }}</td>
        <td>{{ app.user.city }}</td>
    </tr>
</tbody>

<a href="{{ path('app_logout') }}" class="btn btn-danger mt-3">Se déconnecter</a>
</div>
{% else %}
<div class="alert alert-danger">Vous devez être connecté pour voir cette page.</div>
{% endif %}




{% if app.user and app.user.isVerified == false %}

    <div class="card col-3">
       <h3>Voir vos commandes</h3>
            <div class="card-body">
          <p>Vos informations sur vos commande !!!</p>
            <a href="{{path ('app_orders_details')}}" class="btn btn-link d-flex justify-content-center" type="button">voir Profil</a>
            </div>
    </div>
</div>
{% endif %}


{% endblock %}


 