{% extends 'base.html.twig' %}

{% block title %}Mettre à jour un produit{% endblock %}

{% block body %}
    <div class="container mt-5">
        {% include "_partials/_adminnav.html.twig" %}
        <h1 class="mb-4">Mettre à jour un produit</h1>
        
        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'true'}}) }}
        
        <div class="mb-3">
            {{ form_label(form.label, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.label, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.label) }}
        </div>
        
        <div class="mb-3">
            {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.description) }}
        </div>
        
        <div class="mb-3">
            {{ form_label(form.price, 'Prix', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.price, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.price) }}
        </div>
        
        <div class="mb-3">
            {{ form_label(form.stock, 'Unités en stock', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.stock, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.stock) }}
        </div>
        
        <div class="mb-3">
            {{ form_label(form.Rubrics, 'Rubriques', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.Rubrics, {'attr': {'class': 'form-select'}}) }}
            {{ form_errors(form.Rubrics) }}
        </div>
        
        <div class="mb-3">
            {{ form_label(form.images, 'Images', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.images, {'attr': {'class': 'form-control', 'multiple': 'multiple'}}) }}
            {{ form_errors(form.images) }}
        </div>
        
        <button type="submit" class="btn btn-primary">Mettre à jour</button>
        
        {{ form_end(form) }}
    </div>
{% endblock %}
