		}, rotate);
		$(".prev").on("click", {
			d: "p"
		}, rotate);
	
		function rotate(e) {
			if (e.data.d == "n") {
				currdeg = currdeg + rY;
			}
			if (e.data.d == "p") {
				currdeg = currdeg - rY;
			}
			gsap.to(".carousel", {
