{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}

{% block body %}
 
        {% for rubric in rubrics %}
            {% if rubric.image %}
                <img src="{{ rubric.image }}" alt="{{ rubric.label }}" class="card rub mx-auto justify-content-center h-32 mt-3">
            {% endif %}
            <div class="prod-content">
                {% for product in rubric.products %}
                    <span class="badge badge-primary badge-lg">{{ rubric.label }}</span>
                {% endfor %}
                <h2>{{ rubric.label }}</h2>
                <div class="rub-content">{{ rubric.description }}</div>
                {# <p>{{ rubric.user.firstname }}</p> #}
            </div>
        {% endfor %}

    <div class="clear"></div>
    <main class="container">
        <section>
            <h2 class="text-center my-5">Derniers arrivages!</h2>
            <div class="grid">
                {% for rubric in rubrics %}
                    <article class="card">
                        <img src="{{ ('image/rubric/mini/300x300-')  }}" alt="label">
                        <div class="card-body">
                            {% for product in rubric.products %}
                                <span class="badge badge-primary">{{ rubric.label }}</span>
                            {% endfor %}
                            <h3>{{ rubric.label }}</h3>
                            {# <p>{{ rubric.user.firstname }}</p> #}
                        </div>
                    </article>
                {% endfor %}                
            </div>

        </section>
        <section>
            <h2>Stocks</h2>
            {% for orders in order %}
                <h3>{{ order[0].name }} {{order.total}}</h3>
            {% endfor %}
        </section>
    </main>
{% endblock %}
