{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}

{% block body %}
    <header class="prod">
        {% for rubrics in rubric %}
        {% if rubric.image %}
								<img src="{{ rubric.image }}" alt="{{ rubric.label }}" class="card rub mx-auto justify-content-center h-32  mt-3">
							{% endif %}  {% endfor %}
        <div class="prod-content">
            {% for product in rubric.products %}
                <span class="badge badge-primary badge-lg">{{ rubric.name }}</span>
            {% endfor %}
            <h2>{{ lastRubric.label }}</h2>
            <div class="rub-content">{{ lastRubric.content }}</div>
            <p>{{ lastRubric.user.firstname }}</p>
        </div>
    </header>
    <div class="clear"></div>
    <main class="container">
        <section>
            <h2 class="text-center my-5">Derniers arrivages!</h2>
            <div class="grid">
                {% for rubric in rubrics %}
                    <article class="card">
                        <img src="{{ ('image/rubric/mini/300x300-') ~ post.featuredImage }}" alt="{{ post.title }}">
                        <div class="card-body">
                            {% for rubric in product.rubrics %}
                                <span class="badge badge-primary">{{ rubric.name }}</span>
                            {% endfor %}
                            <h3>{{ rubric.label }}</h3>
                            <p>{{ rubric.user.firstname }}</p>
                        </div>
                    </article>
                {% endfor %}                
            </div>

        </section>
        <section>
            <h2>Stocks</h2>
            {% for order in orders %}
                <h3>{{ order[0].name }} {{order.total}}</h3>
            {% endfor %}
        </section>
    </main>
{% endblock %}
