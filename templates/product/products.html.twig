{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}

{% block body %}
    <nav aria-label="breadcrumb" class="mt-2">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a></li>
            {% for subrubrics in rubric %}
               <li class="breadcrumb-item"><a href="{{ path('app_products', {'rubrics': subrubric.slug }) }}"></a></li>
            {% endfor %}
        </ul>
    </nav>

    <main class="main">
       
                {% set subrubric_images = {
                    'saxo': '/image/subrubric(1).png',
                    'trompette': '/image/subrubric(2).png',
                    'guitare':  '/image/subrubric(5).png',
                    'piano': '/image/subrubric(6).png',
                    'batterie': '/image/subrubric(3).png',
                    'tamtam': '/image/subrubric(4).png',
                    'synthetiseur': '/image/subrubric(7).png',
                    'amplificateur': '/image/subrubric(8).png',
                    } %}

                 
                    <div class="container-fluid prod w-100 d-flex">
               
{% for rubric in rubrics %}
                        <div class="row-cols-4 "> 
                                       

                             <div class="col-12 col-sm-6 col-md-4 col-xl-3 mt-2">
               {% for subrubric in rubric.rubrics %}
                        <div id="prod" class="cards-prod text-center">
                           
                            
                                    <h2>{{ subrubric.slug }}</h2> <img src="{{ subrubric_images[subrubric.slug] }}" class="subrub-image" alt="">
                                    <p>{{ subrubric.description }}</p>
                                   
                                    
                        </div>  
                         {% endfor %}     
</div>  
                                        

                </div>            
             {% endfor %} 
            </div>

        
            {# <div class="prod-content">
                <h2>{{ rubric.label }}</h2>
                <div class="rub-content">{{ rubric.description }}</div>
            </div>
        {% endfor %} #}

        <div class="pagination justify-content-center">
            {{ knp_pagination_render(products) }}
        </div>

        <div class="container">
            <section>
                <h2 class="text-center my-5">Derniers arrivages!</h2>
                <div class="grid">
                    {% for product in products %}
                        <article class="card">
                            {% for image in product.images %} 
							<img src="{{ image.image }}" alt="Image de {{ product.id }}" width="200">
						{% else %}
								<p>Aucune image disponible.</p>
							{% endfor %}
                            <div class="card-body">
                                <span class="badge badge-primary">{{ product.label }}</span>
                                <h3>{{ product.label }}</h3>
                            </div>
                        </article>
                    {% endfor %}
                </div>
            </section>

            <section>
                <h2>Stocks</h2>
                {% for order in orders %}
                    <h3>{{ order[0].label }} {{ order.total }}</h3>
                {% endfor %}
            </section>
        </div>
    </main>
{% endblock %}