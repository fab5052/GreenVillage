{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}

{% block body %}

    <nav aria-label="breadcrumb" class="mt-2">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a></li>
            {% for rubrics in rubric %}
            {% for subrubrics in rubrics %}
            <li class="breadcrumb-item"><a href="{{ path('app_products', {'rubrics': rubric.slug }) }}">{{ subrubric.label }}</a></li>
            {% endfor %} 
             {% endfor %}
        </ol>
    </nav>


    <main class="main">
       

                                             
                {% set subrubric_images = {
                    'saxo': '/image/subrubric(1).png',
                    'trompette': '/image/subrubric(2).png',
                    'guitare':  '/image/subrubric(5).png',
                    'piano': '/image/subrubric(6).png',
                    'batterie': '/image/subrubric(3).png',
                    'tamtam': '/image/subrubric(4).png',
                    'synthetiseur': '/image/subrubric(7).png',
                    'amplificateur': '/image/subrubric(8).png'
                    } %}   
                    
                    <div class="container-fluid d-flex w-100 ">
                        <div class="row">
                            {% for rubrics in rubric %} 
                            <div class="col-12 col-lg-10 col-md 6 col-sm 8 ">
   
                                {% set subrubrics = rubrics.getRubrics() %}           
               {% for subrubrics in rubrics %}
        
                             <div class="prod d-flex">
                            
                                    <h2>{{ subrubric.slug }}</h2> <img src="{{ subrubric_images[subrubric.slug] }}" class="subrub-image" alt="{{ subrubric.label }}">
                                    <p>{{ subrubric.description }}</p>
                                </div>   
                                    
                     
                    
                            <section>
                               
                            {# {% for products in rubrics %} #}
                                {% for product in products %}
                                <h2 class="text-center my-5">Instruments {{ product.slug }}</h2>
                                <div class="grid">
                                   
                                        <article class="card">
                                            {% for image in product.images %} 
                                            <img src="{{ image.image }}" alt="Image de {{ product.label }}" width="200">
                                        {% else %}
                                                <p>Aucune image disponible.</p>
                                            {% endfor %}
                                            <div class="card-body">
                                                <span class="badge badge-primary">{{ product.label }}</span>
                                                <h3>{{ product.description }}</h3>
                                            </div>
                                        </article>
                                    </div>
                                    <div class="pagination">
                                        {{ knp_pagination_render(products) }}
                                    </div>
                                    {% endfor %}
                                
                               
                              </section>  
                                {% endfor %}
                           
                            
                        
                       {% endfor %}        
                    </div>

         {# {% endfor %}  #}
            </div>
        </div>
                                    
  
            {# <div class="prod-content">
                <h2>{{ rubric.label }}</h2>
                <div class="rub-content">{{ rubric.description }}</div>
            </div>
        {% endfor %} #}

  



            <section>
                <h2>Stocks</h2>
                {% for order in orders %}
                    <h3>{{ order[0].label }} {{ order.total }}</h3>
                {% endfor %}
            </section>
        </div>
    </main>
{% endblock %}