{% extends 'base.html.twig' %}

{% block title %}Produits
{% endblock %}

{% block body %}

	<nav aria-label="breadcrumb" class="mt-2">
		<ol class="breadcrumb">
			<li class="breadcrumb-item">
				<a href="{{ path('app_home') }}">Accueil</a>
			</li>
			{% for rubrics in rubrics %}
				{% for subrubric in rubric.rubrics %}
					<li class="breadcrumb-item">
						<a href="{{ path('app_products', {'rubrics': rubric.slug }) }}">{{ subrubric.label }}</a>
					</li>
				{% endfor %}
			{% endfor %}
		</ol>
	</nav>


	<main class="main">




			{% set subrubric_images = {
                    'saxo': '/image/subrubric(1).png',
                    'trompette': '/image/subrubric(2).png',
                    'guitare':  '/image/subrubric(5).png',
                    'piano': '/image/subrubric(6).png',
                    'batterie': '/image/subrubric(3).png',
                    'tamtam': '/image/subrubric(4).png',
                    'synthetiseur': '/image/subrubric(7).png',
                    'amplificateur': '/image/subrubric(8).png'
                    } %}

          		<section class="container-fluid">          

			<div class="container-fluid w-100 ">

				<div class="row ">
					{% for rubric in rubrics %}

						<div class="col-lg-6 col-md-8 col-sm-8 ">
						{% set subrubrics = rubric.getRubrics() %}

							{% for subrubric in subrubrics %}
								<div class="card prod">
									<h2>{{ subrubric.slug }}</h2>
									<img src="{{ subrubric_images[subrubric.slug] }}" class="subrub-image" alt="{{ subrubric.label }}">
									<p>{{ subrubric.description }}</p>
								</div>
								<section>
									<h2 class="text-center my-5">Instruments
										{{ subrubric.slug }}</h2>
									<div class="grid col-6 ">
										{% for product in products %}
											<article class="card">
												{% for image in product.images %}
													<img src="{{ image.image }}" alt="Image de {{ product.id }}" width="200">
												{% else %}
													<p>Aucune image disponible.</p>
												{% endfor %}
												<div class="card-body d-flex">
													<span class="badge badge-primary text-center">{{ product.label }}</span>
													<p>{{ product.description }}</p>
												</div>
                                                <div class="mt-6 flex space-x-6">
                                                    <a href="{{ path('app_product_details', {'slug': product.slug}) }}" class="btn btn-secondary">
                                                        Détails
                                                    </a>
													<a href="{{ path('app_cart', {'slug': product.slug}) }}" class="btn btn-primary">
													Ajouter
                                                    </a>
                                                </div>
											</article>
                                        {% endfor %}
											<div class="pagination">
												{{ knp_pagination_render(products) }}
											</div>
                                    	   </div> 
										</section>
									
							{% endfor %}	
							</div>

                    {% endfor %}

						</div>
					
				</div>
			


			</section>


			<div class="container">
				<section>
					<h2 class="text-center my-5">Instruments</h2>
					<div class="grid">
						{% for product in products %}
							<article class="cards">
								{% for image in product.images %}
									<img src="{{ image.image }}" alt="Image de {{ product.id }}" width="200">
								{% else %}
									<p>Aucune image disponible.</p>
								{% endfor %}
								<div class="card-body">
									<span class="badge badge-primary">{{ product.slug }}</span>
									<h3>{{ product.label }}</h3>
								</div>
							</article>
						{% endfor %}
					</div>
				</section>

				<section>
					<h2>Stocks</h2>
					{% for order in orders %}
					<h3>{{ order.products.label }} - Quantité : {{ order.quantity }} - Prix TTC : {{ order.priceWithTva }}</h3>
				{% endfor %}
				
				</section>
			</div>
		</main>
	{% endblock %}
